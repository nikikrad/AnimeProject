<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C222B"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/login_background"/>

    <TextView
        android:id="@+id/tv_LogInLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_RegistrationLabel"
        app:layout_constraintEnd_toEndOf="@+id/tv_RegistrationLabel"
        app:layout_constraintStart_toStartOf="@+id/tv_RegistrationLabel"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_RegistrationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/rus_regular"
        android:textSize="30sp"
        android:text="Регистрация"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_Login"
        android:layout_width="300dp"
        android:fontFamily="@font/alkalami_regular"

        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:hint="Почта"
        />

    <EditText
        android:id="@+id/et_Password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_Login"
        app:layout_constraintEnd_toEndOf="@+id/et_Login"
        app:layout_constraintStart_toStartOf="@+id/et_Login"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:fontFamily="@font/alkalami_regular"

        android:inputType="textPassword"
        android:textColor="@color/black"
        android:hint="Пароль"
        />

    <EditText
        android:id="@+id/et_RepeatPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_Password"
        app:layout_constraintEnd_toEndOf="@+id/et_Password"
        app:layout_constraintStart_toStartOf="@+id/et_Password"
        android:layout_marginTop="50dp"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:fontFamily="@font/alkalami_regular"

        android:hint="Повторите пароль"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_LogIn"
        android:layout_width="200dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="@+id/et_RepeatPassword"
        app:layout_constraintStart_toStartOf="@id/et_RepeatPassword"
        app:layout_constraintTop_toBottomOf="@+id/et_RepeatPassword"
        android:text="Зарегестрироваться"
        android:fontFamily="@font/rus_regular"
        android:background="@drawable/rectangle_login_btn_enter"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>