<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C222B">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/login_background"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_SignInLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/rus_regular"
        android:text="Войдите в аккаунт"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alkalami_regular"

        android:textColor="@color/design_default_color_error"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_SignInLabel"
        app:layout_constraintStart_toStartOf="@+id/tv_SignInLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_SignInLabel" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_LogOut"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangle_login_btn_enter"
        android:fontFamily="@font/rus_regular"
        android:text="выйти"
        app:layout_constraintEnd_toEndOf="@+id/tv_SignInLabel"
        app:layout_constraintStart_toStartOf="@+id/tv_SignInLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_SignInLabel" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_Login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/alkalami_regular"
        android:hint="Почта"
        android:inputType="textEmailAddress"
        android:shadowColor="@color/white"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_Password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/alkalami_regular"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="15sp"

        app:layout_constraintEnd_toEndOf="@+id/et_Login"
        app:layout_constraintStart_toStartOf="@+id/et_Login"
        app:layout_constraintTop_toBottomOf="@+id/et_Login" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ErrorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/alkalami_regular"
        android:text="Неправильный логин или пароль"
        android:textColor="@color/design_default_color_error"

        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/et_Password"
        app:layout_constraintTop_toBottomOf="@+id/et_Password" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_LogIn"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rectangle_login_btn_enter"
        android:fontFamily="@font/rus_regular"
        android:text="Вход"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/et_Password"
        app:layout_constraintStart_toStartOf="@id/et_Password"
        app:layout_constraintTop_toBottomOf="@+id/et_Password" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_Registration"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_registrate"
        android:src="@drawable/ic_baseline_login"
        android:textColor="#224E7A"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>